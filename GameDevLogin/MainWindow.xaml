<Window x:Class="GameDevLogin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameDevLogin"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="SlateGray"/>
        </Grid.Background>
        <TabControl HorizontalAlignment="Stretch"  VerticalAlignment="Stretch">
            <TabItem Header="Login">
                <Frame Source="Login.xaml"/>
            </TabItem>
            <TabItem Header="Register">
                <Frame Source="Register.xaml"/>
            </TabItem>
            <TabItem Header="Google Sheet Link">
                <Frame Source="SheetController.xaml"></Frame>
            </TabItem>
        </TabControl>
        
    </Grid>
</Window>
