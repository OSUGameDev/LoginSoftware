<Page x:Class="GameDevLogin.SheetController"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GameDevLogin"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SheetController">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Content="Link SpreadSheet" Width="128" Height="24" Margin="4,0,0,0" Click="LinkSheet"/>
                <TextBlock Margin="4,0,0,0" >Sheet ID</TextBlock>
                <TextBox Width="300" Height="24" Margin="4,0,0,0" x:Name="SheetID"/>
            </StackPanel>
            <Button Content="NewSheet" Width="128" Height="24" HorizontalAlignment="Left" Margin="4,0,0,0" Click="CreateNewSheet"/>
        </StackPanel>
        
    </Grid>
</Page>
